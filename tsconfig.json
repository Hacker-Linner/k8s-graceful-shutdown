{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "lib": ["es2015"],
    "moduleResolution": "node",
    "module": "commonjs",
    "skipLibCheck": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true
  },
  "include": ["lib/k8s-graceful-shutdown.ts", "test/**/*"],
  "exclude": ["node_modules", "dist"]
}
